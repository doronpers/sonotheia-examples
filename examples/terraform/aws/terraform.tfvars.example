# Example Terraform variables configuration
# Copy this file to terraform.tfvars and customize the values

# Required variables
aws_region        = "us-east-1"
project_name      = "sonotheia-example"
sonotheia_api_key = "your-api-key-here"  # IMPORTANT: Do NOT commit real API keys!

# Optional variables
environment      = "dev"
sonotheia_api_url = "https://api.sonotheia.com"

# Lambda configuration
lambda_memory_size = 512
lambda_timeout     = 30
lambda_runtime     = "python3.11"

# Feature flags
enable_api_gateway = true
enable_monitoring  = true
enable_vpc         = false

# S3 configuration
s3_audio_retention_days = 30
enable_s3_versioning    = false

# DynamoDB configuration
dynamodb_billing_mode  = "PAY_PER_REQUEST"  # or "PROVISIONED"
dynamodb_read_capacity = 5                  # Only used if billing_mode is PROVISIONED
dynamodb_write_capacity = 5                 # Only used if billing_mode is PROVISIONED
dynamodb_ttl_enabled   = true
dynamodb_ttl_days      = 90

# Monitoring configuration
alarm_email         = ""  # Set to your email for alarm notifications
enable_xray_tracing = false

# Webhook configuration (optional, will be auto-generated if not provided)
webhook_secret = ""

# Additional tags (optional)
additional_tags = {
  CostCenter = "Engineering"
  Owner      = "DevOps Team"
}
